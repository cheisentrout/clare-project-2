<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include ('../partials/head.ejs') %>
  <body>

    <div class="container">
      <%- include ('../partials/header.ejs') %>
      <h1>Edit <%=student.name%></h1>
      <form action="/class/<%=student._id%>?_method=PUT" method="POST">
        Name:
          <input type="text" value="<%=student.name%>" />
        Student Photo:
          <input type="text" value="<%=student.img%>">
        Date of Birth:
          <input type="date" value="<%=student.dob%>" />
        Address:
          <input type="text" value="<%=student.address%>">
        Parents:
          <input type="text" value="<%=student.parents%>" />
        Allergies:
          <input type="text" value="<%=student.allergies%>" />
        Enrollment Status:
          <input type="text" value="value="<%=student.enrollment%>"" />
        Notes:
          <input type="textarea" value="<%=student.notes%>">
        <input type="submit" value="Submit Changes">
      </form>
    </div>

  </body>
</html>
